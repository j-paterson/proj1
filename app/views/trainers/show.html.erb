<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<b>Pokemon</b>
<% @trainer.pokemons.each do |pokemon| -%>
<ul>
<li>
	<%= pokemon.name %>, Level <%= pokemon.level %> (HP: <%= pokemon.health %>) 
	<%= button_to "Damage!", damage_path(id: pokemon, trainer_id: @trainer.id), :class => "button medium", :method => :patch %>
</li>
</ul>
<% end -%>
<% if @trainer.id==current_trainer.id %>    
	<%= button_to "Create New!", new_pokemon_path, :class => "button medium", :method => :get %>
<% end -%>

